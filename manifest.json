{

    "manifest_version": 2,
    "name": "Pomodoro",
    "version": "1.0",
    "description": "personalized Pomodoro tracker",
  
    "icons": {
      "48": "icon/pomodoro.png",
      "96": "icon/pomodoro.png"
    },
      
    "background": {
      "scripts": ["popup/pomodoro-control.js", "background.js"]
    },

    "permissions": [
      "tabs",
      "storage",
      "http://*/*",
      "https://*/*",
      "management",
      "storage"
    ],


    "browser_action": {
      "default_icon": "icon/pomodoro.png",
      "default_title": "Pomodoro",
      "default_popup": "popup/index.html"
    }
  
  
}